from flask import Flask, request, jsonify
from flask_cors import CORS
import os

app = Flask(__name__)
CORS(app)

@app.get("/health")
def health():
    return {"ok": True}, 200

@app.post("/checkout/start")
def checkout_start():
    data = request.get_json(silent=True) or {}
    # Return a minimal payload; if you set STRIPE_SECRET_KEY later, swap to real session create
    return jsonify({"url": "https://checkout.stripe.com/c/test_placeholder"}), 200

@app.post("/api/checkout/start")
def api_checkout_start():
    data = request.get_json(silent=True) or {}
    return jsonify({"url": "https://checkout.stripe.com/c/test_placeholder"}), 200

if __name__ == "__main__":
    app.run(host="0.0.0.0", port=8799)
